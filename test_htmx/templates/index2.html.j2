<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>Demo 2 HTMX</title>
    <script src="https://unpkg.com/htmx.org@1.9.10"></script>
    <script src="https://unpkg.com/htmx.org/dist/ext/ws.js"></script>
    <script src="https://cdn.tailwindcss.com"></script>

</head>
<body>
    <div hx-ext="ws" ws-connect="/ws/notifications/">
        <div id="notifications" hx-swap-oob="beforeend">
            New message received
        </div>
        <!-- will be swapped using an extension -->
        <div id="chat_room" hx-swap-oob="morphdom">
            ....
        </div>
        <form id="form" ws-send>
            <input name="chat-message">
        </form>
    </div>
    
    
    <script>
    document.body.addEventListener('htmx:beforeRequest', function(event) {
        console.log('HTMX is configuring a request!', event.detail);
    });
    </script>
</body>
</html>