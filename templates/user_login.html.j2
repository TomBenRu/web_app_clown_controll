{# Shows a login form #}
<!DOCTYPE html>
<html lang="en">
{% include "head_htmx.html.j2" %}
    <body class="bg-gray-500">

        <div class="max-w-md mx-auto mt-8 p-6 bg-white rounded-lg shadow-md">
            <h1 class="text-3xl font-medium text-center text-gray-700">Login</h1>

            <form class="mt-6">
                <div class="mb-2">
                    <label class="block text-gray-700 font-medium mb-2" for="username">
                    Username
                    </label>
                    
                    <input class="border p-2 w-full" type="text" id="username" name="username" required>
                </div>

                <div class="mb-2">
                    <label class="block text-gray-700 font-medium mb-2" for="password">
                    Password
                    </label>
                    
                    <input class="border p-2 w-full" type="password" id="password" name="password" required>
                </div>

                <button 
                    class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600" type="submit"
                    hx-post="/authorize"
                    hx-target="#response"
                    hx-swap="outerHTML"
                    type="submit">
                Login
                </button>
                <div id="response"></div>
            </form>
        </div>
    </body>
</html>